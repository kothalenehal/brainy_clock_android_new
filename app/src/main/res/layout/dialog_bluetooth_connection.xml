<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_rounded"
        android:paddingHorizontal="@dimen/_25dp"
        android:paddingVertical="@dimen/_22dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            style="@style/text_view_style1"
            android:fontFamily="@font/dm_bold"
            android:text="@string/connect_to_tablet_ndevice_first"
            android:textSize="@dimen/_19sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_msg"
            style="@style/text_view_style1"
            android:layout_marginTop="@dimen/_12dp"
            android:text="@string/msg_bluetooth_connection"
            android:textSize="@dimen/_11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_cancel"
            style="@style/text_view_style1"
            android:layout_marginTop="@dimen/_19dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/dm_bold"
            android:paddingHorizontal="@dimen/_22dp"
            android:paddingVertical="@dimen/_5dp"
            android:text="@string/cancel"
            android:textSize="@dimen/_11sp"
            app:layout_constraintRight_toLeftOf="@id/tv_pair"
            app:layout_constraintTop_toBottomOf="@id/tv_msg" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_pair"
            style="@style/text_view_style"
            android:layout_marginTop="@dimen/_19dp"
            android:background="@drawable/bg_pair_btn"
            android:fontFamily="@font/dm_bold"
            android:paddingHorizontal="@dimen/_22dp"
            android:paddingVertical="@dimen/_5dp"
            android:text="@string/pair"
            android:textColor="@color/grey"
            android:textSize="@dimen/_11sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_msg" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>