

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true">
    <shape android:shape="rectangle">
        <solid android:color="@android:color/black" /> <!-- Black background color -->
        <corners android:radius="10dp" /> <!-- Border radius -->

        <size
            android:width="80dp"
        android:height="60dp" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <solid android:color="@android:color/transparent" /> <!-- Transparent background for unselected tabs -->
    </shape>
</item>
</selector>

